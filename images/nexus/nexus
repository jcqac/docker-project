#!/bin/bash
export NEXUS_HOME=/opt/nexus/nexus-3.1.0-04
PATH=/sbin:/bin:/usr/sbin:/usr/bin
start() {
 sh $NEXUS_HOME/bin/startup.sh
}
stop() {
 sh $CATALINA_HOME/bin/shutdown.sh
}
case $1 in
  start|stop) $1;;
  restart) stop; start;;
  *) echo "Run as $0 <start|stop|restart>"; exit 1;;
esac